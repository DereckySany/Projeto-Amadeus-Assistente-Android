    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layoutChatbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_anchorGravity="bottom">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/borda_card" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            tools:ignore="RtlSymmetry">

            <EditText
                android:id="@+id/mensagemUsuarioTextView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9"
                android:background="@android:color/transparent"
                android:hint="@string/pesquisar_por"
                android:maxLines="6"
                android:textColorHint="@color/gray_300"
                android:importantForAutofill="no"
                android:inputType="text" />

            <ImageView
                android:id="@+id/enviarButton"
                android:layout_width="24dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:contentDescription="@string/botao_enviar"
                android:padding="12dp"
                android:tint="@color/colorPrimary"
                app:srcCompat="@drawable/ic_add" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/nenhumaMensagemAindaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nenhuma_resposta_gravada">

        </TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/padding_bottom_card"
        android:layout_marginEnd="@dimen/padding_bottom_card"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_lista_tipo_4" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>